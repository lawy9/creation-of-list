# Create an empty list
my_list = []

# Append elements 10, 20, 30, and 40
my_list.append(10)
my_list.append(20)
my_list.append(30)
my_list.append(40)

# Insert 15 in the list
my_list.insert(1, 15)  # Insert 15 at index 1

# Extend the list with 50, 60, and 70
my_list.extend([50, 60, 70])

# Remove the last element
my_list.pop()  # Removes the last element

# Sort the list in ascending order
my_list.sort()

# Find and print the index value of 30 in the list
index_of_30 = my_list.index(30)
print(f"The index of 30 is: {index_of_30}")

# Optionally print the final list to see the result
print(f"The final sorted list is: {my_list}")
